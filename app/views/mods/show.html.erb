<%= breadcrumbs crumb("Mods", mods_path), crumb(@mod.name) %>

<article>
  <header class="page-header">
    <h1>
      <%= @mod.name %>
      <small>by <%= @mod.account.username %></small>
    </h1>
  </header>
  <div class="span10 offset2">
    <div class="btn-group">
      <%= button_to "Version #{@mod.version}", "#", class: "disabled" %>
      <%= button_to "KSP #{@mod.compatible}", "#", class: "disabled" %>
      <%= button_to icon_tag("download") + " Download", "download_mod_path" %>
      <%= button_to icon_tag("thumbs-up") + " Like", "upvote_mod_path" %>
      <%= button_to icon_tag("thumbs-down") + " Dislike", "downvote_mod_path" %>
      <%= button_to icon_tag("bookmark") + " Bookmark", "bookmark_mod_path" %>
    </div>
  </div>
  <br> <br>
  <ul class="thumbnails">
    <li class="span6">
      <%= thumblink image_tag(@mod.images.shift.image, width: "100%") %>
    </li>
    <% @mod.images.map(&:image).each do |image| %>
      <li class="span3"><%= thumblink image_tag image %>
    <% end %>
  </ul>
  <p class="text-info well" style="text-align: center;">
    <%= @mod.liked_by_count %> Likes /
    <%= @mod.disliked_by_count %> Dislikes /
    <%= @mod.bookmark_count %> Bookmarks /
    <%= @mod.download_count %> Downloads
  </p>
  <ul class="nav nav-tabs">
    <li class="active">
      <%= link_to "Description", "#description", data: toggle("tab") %>
    </li>
    <li>
      <%= link_to "Installing", "#installing", data: toggle("tab") %>
    </li>
    <li>
      <%= link_to "Changelog", "#changelog", data: toggle("tab") %>
    </li>
  </ul>
  <div id="content" class="tab-content">
    <div class="tab-pane fade active in" id="description">
      <%= raw @mod.description %>
    </div>
    <div class="tab-pane fade" id="installing">
      <%= raw @mod.install %>
    </div>
    <div class="tab-pane fade" id="changelog">
      <%= raw @mod.changelog %>
    </div>
  </div>

</article>
